source :rubygems

gem 'rack'
gem 'sinatra'
gem 'sinatra-synchrony'
gem 'faraday'

group :development do
  gem 'thin'
  gem 'pry'
  gem 'logger'
  gem 'shotgun'
end

group :test do
  gem 'rspec'
  gem 'rack-test', :require => "rack/test"
  gem 'capybara', :require => "capybara/rspec"
  gem 'simplecov', :require => false
end